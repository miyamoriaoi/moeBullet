<div id = "sign_up">

  <div class="user_common">
    <h1>注册</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="email ui input">
      <%= f.email_field :email, autofocus: true, placeholder: "邮箱(例: \"nico@moe.com\")" %>
    </div>

    <div class="ui input">
      <%= f.password_field :password, autocomplete: "off" ,placeholder: "密码(8-72位字符组成 区分大小写)"%>
    </div>

    <div class="ui input">
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder:"确认密码" %>
    </div>

    <div class="actions input">
      <%= f.submit "注册", class: "ui primary button submit" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>